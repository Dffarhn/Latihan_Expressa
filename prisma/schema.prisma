generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  // Uses direct connection, ⚠️ make sure to keep this to `POSTGRES_URL_NON_POOLING`
  // or you'll have dangling databases from migrations
  directUrl = env("POSTGRES_URL_NON_POOLING")
  schemas   = ["auth", "public"]
}

model Position {
  id             Int              @id @default(autoincrement())
  name           String
  Kahlova_Member Kahlova_Member[]

  @@schema("public")
}

model Kahlova_Member {
  id                 Int       @id @default(autoincrement())
  name               String?
  password           String?
  email              String?   @unique
  avatar             String?
  Position           Position? @relation(fields: [positionid], references: [id])
  positionid         Int?
  create_at          DateTime  @default(now())
  isConfirm          Boolean   @default(false)
  verification_token String    @unique

  @@schema("public")
}

model Kahlova_Project {
  id              String           @unique @default(uuid())
  name            String
  bio             String
  categories      Project_Categori @relation(fields: [categori], references: [name])
  categori        String
  project_picture String[]
  techmade        String[]

  @@schema("public")
}

model Project_Categori {
  name            String            @unique
  Kahlova_Project Kahlova_Project[]

  @@schema("public")
}

model images {
  id   String @unique @default(uuid())
  data Bytes
  name String

  @@schema("public")
}

model Project_Images {
  id   String @unique @default(uuid())
  data Bytes
  name String

  @@schema("public")
}
